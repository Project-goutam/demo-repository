<!-- views/students/results.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Results</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <%- include("landing") %>
    <div class="max-w-3xl mx-auto px-4 py-8">

        <!-- Student Details Section -->
        <div class="bg-green-700 py-2 px-10 text-white mb-8">
            <h2 class="text-center text-3xl underline mb-4">Student Results</h2>
            <p><strong>Name:</strong> <%= student.name %></p>
            <p><strong>College:</strong> <%= student.college %></p>
            <p><strong>Status:</strong> <%= student.status %></p>
            <p><strong>Batch:</strong> <%= student.batch.name %></p>
        </div>

        <!-- Results Section -->
        <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Results</h2>
            <div class="overflow-x-auto">
                <% if (results.length > 0) { %>
                    <table class="min-w-full bg-white border border-gray-200">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="py-2 px-4 border-b border-gray-200">Interview Date</th>
                                <th class="py-2 px-4 border-b border-gray-200">Company Name</th>
                                <th class="py-2 px-4 border-b border-gray-200">Result</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach(result => { %>
                                <tr class="hover:bg-gray-200 transition duration-100">
                                    <td class="py-2 px-4 border-b border-gray-200"><%= result.interview.date.toDateString() %></td>
                                    <td class="py-2 px-4 border-b border-gray-200"><%= result.interview.companyName %></td>
                                    <td class="py-2 px-4 border-b border-gray-200"><%= result.result %></td>
                                    
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>No results found for this student.</p>
                <% } %>
            </div>
        </div>

    </div>
</body>
</html>
